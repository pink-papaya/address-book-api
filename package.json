{
  "name": "address-book-api",
  "version": "1.0.0",
  "description": "A simple REST API for the address-book app",
  "main": "dist/app.js",
  "author": "Ricardo Tavares",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "yarn serve",
    "serve": "node -r ./tsconfig-paths-bootstrap.js dist/app.js",
    "watch-node": "nodemon dist/app.js",
    "watch": "tsc -w",
    "dev": "nodemon",
    "start:dev": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
    "test:unit": "jest",
    "lint": "eslint \"{src,tests}/**/*.{js,ts,json}\"",
    "prettier:check": "prettier \"**/*.{js,ts,json}\" --list-different",
    "prettier:format-all": "prettier --write \"**/*.{js,ts,json}\""
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start:dev",
    "ext": "ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "pg": "^7.14.0",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.11",
    "@types/pg": "^7.11.2",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "jest-watch-typeahead": "^0.4.2",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  }
}
